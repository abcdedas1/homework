@page "/"
@using HelloNetMauiBlazorHybridApp.Services;
@inject IPoetryStorage _poetryStorage
<BootstrapInputGroup style="width: 200px; float:left">
    <BootstrapInputGroupLabel DisplayText="添加姓名" style="width: 80px;"></BootstrapInputGroupLabel>
    <BootstrapInput @bind-Value="_name" ></BootstrapInput>
</BootstrapInputGroup>

<BootstrapInputGroup style="width: 200px; float:left;margin-left:200px">
    <BootstrapInputGroupLabel DisplayText="联系方式" style="width: 80px;"></BootstrapInputGroupLabel>
    <BootstrapInput @bind-Value="_content"></BootstrapInput>
</BootstrapInputGroup>
<Button OnClick="SaveAsync">保存</Button>

@foreach (var poetry in _poetries)
{
    <Card>
        <BodyTemplate>
            <div style="margin-bottom:20px">    姓名    @poetry.Name</div>
            <div>联系方式    @poetry.Content</div>
        </BodyTemplate>
    </Card>
}